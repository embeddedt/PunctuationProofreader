
{
    "rules": {
        "trailing-comma": [
          true,
          {
            "multiline": {
              "objects": "ignore",
              "arrays": "ignore",
              "functions": "never",
              "typeLiterals": "ignore"
            },
            "singleline": {
                "functions": "never"
            },
            "esSpecCompliant": true
          }
        ],
        "semicolon": [true, "always", "ignore-bound-class-methods"]
    }
}